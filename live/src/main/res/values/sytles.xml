<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="action_sheet_seek_bar">
        <item name="android:minHeight">@dimen/live_room_action_sheet_seek_bar_height</item>
        <item name="android:maxHeight">@dimen/live_room_action_sheet_seek_bar_height</item>
        <item name="android:progressDrawable">@drawable/setting_progress</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
    </style>

    <style name="style_beauty_sheet_dialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0</item>
    </style>

    <style name="action_sheet_beauty_seek_9_bar" parent="action_sheet_seek_bar">
        <item name="android:max">9</item>
    </style>

    <style name="action_sheet_beauty_seek_100_bar" parent="action_sheet_seek_bar">
        <item name="android:max">100</item>
    </style>

    <style name="style_beauty_sheet_item">
        <item name="android:button">@null</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>